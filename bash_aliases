alias emacs='emacs -nw'
alias gti='git'

# enable color support of ls
alias ls='ls --color=auto'

#alias grep='grep --color=auto -n'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias emacs='emacsclient -t'
